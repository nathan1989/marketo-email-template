{% macro textBlock(id, heading, text) %}
<tr class="mktoModule" id="{{ id }}" mktoname="Text block">
    <td>        
        <table cellpadding="0" cellspacing="0" border="0" class="body-text full-width text-block">
            <tr>
                <td class="mktoText h1" id="{{ id }}-heading" mktoname="Heading">
                    {{ heading }}
                </td>
                <td class="mktoText text text-right" id="{{ id }}-text" mktoname="Text">
                    {{ text }}
                </td>
            </tr>
        </table>    
    </td>
</tr>
{% endmacro %}